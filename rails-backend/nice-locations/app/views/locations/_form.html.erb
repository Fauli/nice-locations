
<%= form_with(model: @location) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
    <% @location.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
    <% @location.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>

  </div>

  <div class="field">
    <%= form.label :category %>
    <%= form.text_field :category %>
    <% @location.errors.full_messages_for(:category).each do |message| %>
      <div><%= message %></div>
    <% end %>

  </div>

  <div class="field">
    <%= form.label :url %>
    <%= form.text_field :url %>
    <% @location.errors.full_messages_for(:url).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :img_url %>
    <%= form.text_field :img_url %>
    <% @location.errors.full_messages_for(:img_url).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :author %>
    <%= form.text_field :author %>
    <% @location.errors.full_messages_for(:author).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
